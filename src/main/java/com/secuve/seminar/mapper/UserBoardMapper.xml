<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.secuve.seminar.mapper.UserBoardMapper">

	<!-- 사용자 게시판 -->
	<resultMap id="BoardResult" type="com.secuve.seminar.dto.Board">
		<result property="bId" column="bId" />
		<result property="bUserName" column="bUserName" />
		<result property="bTitle" column="bTitle" />
		<result property="bContent" column="bContent" />
		<result property="bHit" column="bHit" />
		<result property="regDate" column="regDate" javaType="java.sql.Date" />
	</resultMap>

	<select id="userBoardList" resultMap="BoardResult">
		select * from userBoard order by bId DESC
	</select>

	<insert id="userBoardWrite" parameterType="com.secuve.seminar.dto.Board">
		INSERT INTO userBoard(bId, bUserName, bTitle, bContent, bHit, bRegDate) values(#{bId},	#{bUserName}, #{bTitle}, #{bContent},#{bHit},#{bRegDate})
	</insert>

	<select id="userBoardViewbybId" resultType="com.secuve.seminar.dto.Board">
		select * from userBoard where bId=#{bId}
	</select>


	<update id="userBoardModifybyBId" parameterType="com.secuve.seminar.dto.Board">
		update userBoard set bTitle=#{bTitle}, bContent=#{bContent} where bId=#{bId}
	</update>

	<delete id="userBoardDelete" parameterType="long">
		delete from userBoard where bId=#{bId}
	</delete>

	<update id="userBoardHitCount" parameterType="long">
		update userBoard set bHit=bHit+1 where bId=#{bId}
	</update>
	
</mapper>